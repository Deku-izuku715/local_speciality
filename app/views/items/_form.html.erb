<%= form_with model: item, local: true do |f|%>
  <div class="field">
    <%= f.label :prefecture, "都道府県" %><br />
    <%= f.text_area :prefecture, class: :form__text, id:"item_prefecture" %>
  </div>

  <div class="field">
    <%= f.label :title, "名産品のタイトル" %><br />
    <%= f.text_field :title, class: :form__text, id:"item_title" %>
  </div>

  <div class="field">
    <%= f.label :text, "紹介文" %><br />
    <%= f.text_area :text, class: :form__text, id:"item_text" %>
  </div>

  <div class="field">
    <%= f.label :image, "名産品の画像" %><br />
    <%= f.file_field :image, id:"item_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>